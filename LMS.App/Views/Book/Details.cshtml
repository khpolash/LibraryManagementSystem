@model LMS.Application.ViewModels.VmEntities.VmBook

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Adminlte.cshtml";
}


<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Book</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a asp-controller="Dashboard" asp-action="Index">Home</a></li>
                    <li class="breadcrumb-item active">Book</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="card">
        <div class="card-header">
            <h3 class="card-title">Book List</h3>
            <div class="card-tools">
                <a asp-action="AddEdit" asp-controller="Book" class="btn btn-info btn-sm">
                    <i class="fa-regular fa-square-plus"></i> Add</a>
                <a asp-action="AddEdit" asp-controller="Book" asp-route-id="@Model.Id" class="btn btn-info btn-sm">
                    <i class="fa-regular fa-pen-to-square"></i> Edit</a>
                <a asp-action="Index" asp-controller="Book" class="btn btn-info btn-sm">
                    <i class="fa-solid fa-list"></i> List</a>
            </div>
        </div>
        <div class="card-body">
            <dl class="row">
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Id)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Id)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.Title)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.Title)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.AuthorName)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.AuthorName)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.ISBN)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.ISBN)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.AvailableCopies)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.AvailableCopies)
                </dd>
                <dt class="col-sm-2">
                    @Html.DisplayNameFor(model => model.TotalCopies)
                </dt>
                <dd class="col-sm-10">
                    @Html.DisplayFor(model => model.TotalCopies)
                </dd>

            </dl>
        </div>
    </div>

</section>
